{
  "name": "groklexa-mobile",
  "version": "1.0.0",
  "description": "Groklexa voice assistant mobile app",
  "main": "index.js",
  "scripts": {
    "build": "echo 'No build step - using live server mode'",
    "cap:init": "npx cap init Groklexa com.groklexa.app --web-dir www",
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    "cap:sync": "npx cap sync",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios",
    "android": "npx cap run android",
    "ios": "npx cap run ios"
  },
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/ios": "^6.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "typescript": "^5.0.0"
  },
  "author": "",
  "license": "MIT"
}
